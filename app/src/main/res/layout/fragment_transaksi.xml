<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_list_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                tools:itemCount="3"
                android:clipToPadding="true"
                tools:listitem="@layout/item_checkout_with_checkbox" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@id/rec_list_product"
                android:orientation="vertical"
                android:background="@color/white"
                android:clipToPadding="false"
                android:elevation="11dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:elevation="11dp"
                    android:padding="@dimen/_10sdp">
                    <TextView
                        android:id="@+id/jenis_pengi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/jenis_pengi"
                        android:textAppearance="@style/title_text"
                        android:gravity="top"
                        />
                    <RadioGroup
                        android:id="@+id/rg_jenis_pengiriman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioButton
                            android:dividerPadding="@dimen/_5ssp"
                            android:id="@+id/rb_cod"
                            android:layout_marginTop="@dimen/_10ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:textAppearance="@style/radio_button_text"
                            android:text="COD"/>
                        <RadioButton
                            android:id="@+id/rb_ambil_sendiri"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:textAppearance="@style/radio_button_text"
                            android:text="Ambil Sendiri"/>
                        <RadioButton
                            android:id="@+id/rb_antar"
                            android:textAppearance="@style/radio_button_text"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:text="Antar"/>
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:elevation="11dp"
                    android:padding="@dimen/_10sdp"
                    >
                    <TextView
                        android:id="@+id/jenis_pembayaran"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/jenis_pembayaran"
                        android:textAppearance="@style/title_text"
                        android:gravity="top"
                        />
                    <RadioGroup
                        android:id="@+id/rg_jenis_pembayaran"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioButton
                            android:dividerPadding="@dimen/_5ssp"
                            android:id="@+id/rb_transfer"
                            android:layout_marginTop="@dimen/_10ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:textAppearance="@style/radio_button_text"
                            android:text="COD"/>
                        <RadioButton
                            android:id="@+id/rb_tunai"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:textAppearance="@style/radio_button_text"
                            android:text="Ambil Sendiri"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>